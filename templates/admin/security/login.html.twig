{% extends '@admin/base.html.twig' %}

{% block title %}Вход в админку | Story Song{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="h4 mb-4 text-center">Вход</h1>
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <form method="post" action="{{ path('app_login') }}">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" name="_username" id="inputEmail" class="form-control" value="{{ last_username }}" required autofocus>
                            </div>
                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Пароль</label>
                                <input type="password" name="_password" id="inputPassword" class="form-control" required>
                            </div>
                            <input type="hidden" name="_target_path" value="{{ path('admin_dashboard') }}">
                            <button class="btn btn-primary w-100" type="submit">Войти</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
